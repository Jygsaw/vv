{
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "react/require-default-props": "off",
    "no-shadow": "off",
    "prefer-destructuring": ["warn", {
      "VariableDeclarator": {
        "array": false,
        "object": true
      },
      "AssignmentExpression": {
        "array": false,
        "object": true
      }
    }],
    "no-mixed-operators": [
      "warn",
      {
        "groups": [
          ["&", "|", "^", "~", "<<", ">>", ">>>"],
          ["==", "!=", "===", "!==", ">", ">=", "<", "<="],
          ["&&", "||"],
          ["in", "instanceof"]
        ],
        "allowSamePrecedence": true
      }
    ],
    "commented": {
      "--comment--camelcase": "off",
      "--comment--react/prefer-stateless-function": [0],
      "--comment--radix": "off",
      "--comment--react/forbid-prop-types": ["warn", { "forbid": ['object', 'any'] }],
      "--comment--no-use-before-define": ["warn", { "functions": false }],
      "--comment--jsx-a11y/no-autofocus": "off",
      "--comment--jsx-a11y/no-static-element-interactions": "off"
    }
  },
}
